---
import Experience from '../components/Experience.astro';
import Education from '../components/Education.astro';
import IDCard from '../components/IDCard.astro';
import Layout from '../layouts/Layout.astro';
import config from '../lib/config';
---

<Layout title={`${config.personal.name} - ${config.personal.title}`}>

	<div class="min-h-screen min-w-screen flex flex-col items-center justify-center p-6 gap-6">
		<section class="w-full flex lg:flex-row flex-col gap-12 m-auto lg:max-w-6xl">
			<div class="lg:w-1/3 lg:flex-shrink-0">
			<IDCard />
			</div>
			<div class="lg:w-2/3">
			<p>
				{config.personal.summary}
			</p>
			</div>

		</section>
		

		<section class="w-full flex lg:flex-row flex-col gap-12 m-auto lg:max-w-6xl mt-12">
			<Experience/>
			</section>

			<section class="w-full flex lg:flex-row flex-col gap-12 m-auto lg:max-w-6xl mt-12">
				<Education/>
			</section>
	</div>
</Layout>
