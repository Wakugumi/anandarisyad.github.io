---
/**
 * Ananda Risyad
 *
 * Experience section.
 * This component displays a timeline of professional experiences.
 * Items of 'experience' are listed from the config.json under 'experience', make sure to follow the type.
 */

import config from "../lib/config";
import Card from "./baseline/Card.astro";
import Timeline from "./Timeline.astro";
---

<div class="flex flex-col gap-12 m-auto w-full max-w-full">
    <div>
        <div class="p-6">
            <h2 class="text-4xl font-bold mb-4">Experience</h2>
        </div>

        <div>
        <Timeline 
            items={config.experience!.map(exp => ({
                startFrom: exp.startFrom,
                endAt: exp.endAt,
                duration: exp.duration,
                company: exp.company,
                position: exp.position,
                description: exp.description,
                location: exp.location,
                 status: exp.status || 'current' as const,
                 skills: exp.skills || [],
                    links: exp.links || [],
                 
            }))}
        />
        </div>
    
    </div>
</div>
